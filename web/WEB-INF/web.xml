<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ControlProducto</servlet-name>
        <servlet-class>Controller.ControlProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlLogin</servlet-name>
        <servlet-class>Controller.ControlLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlAccesoPages</servlet-name>
        <servlet-class>Controller.ControlAccesoPages</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControlProducto</servlet-name>
        <url-pattern>/ControlProducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlLogin</servlet-name>
        <url-pattern>/ControlLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlAccesoPages</servlet-name>
        <url-pattern>/ControlAccesoPages</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            10
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
